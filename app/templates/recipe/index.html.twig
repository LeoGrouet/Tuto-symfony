{% include 'recipe/navbar.html.twig' %}

{% block body %}

<div class="row row-cols-1 d-flex">

    {% for recipe in recipes %}
                    <div class="card flex-4" style="width: 18rem;">
                        <img src="..." class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">{{recipe.title}}</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <a href="{{ path('recipe.show',{id: recipe.id, slug: recipe.slug}) }}" class="btn btn-primary">{{recipe.title}}</a>
                                <a class="btn" href="{{ path('recipe.edit', {id:recipe.id}) }}">Edit</a>
                                <a class="btn" href="{{ path('recipe.delete', {id:recipe.id}) }}">Delete</a>
                            </div>
                    </div>
                    {% endfor %}
</div>
                      <a class="btn" href="{{ path('recipe.add') }}"> Ajouter une recette </a>
{% endblock %}
